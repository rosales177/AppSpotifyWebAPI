@model IEnumerable<ConsumeSpotifyWebAPI.Models.Release>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container row">
    @if(Model.Count() > 0)
    {
        @foreach (var item in Model)
        {
            string[] url = item.url_image.Split(",");
            string[] width = item.width_img.Split(",");
            string[] height = item.height_img.Split(",");
            <div class="card m-1" style="width:350px;">
                <div class="card-body d-flex flex-wrap justify-content-between">
                    <div class="w-50">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Artists)</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayFor(modelItem => item.Name)</h6>
                    </div>
                    <div>
                        <img class="mt-auto" src="@url[2]" />
                    </div>

                </div>
                <a class="btn btn-success" href="@Html.DisplayFor(spotify => item.url_spotify)">Go to spotify</a>
            </div>
        }
    }
    else
    {
        <p>No data available</p>
        
    }
</div>
